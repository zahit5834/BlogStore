@model List<BlogStore.EntityLayer.Entities.Comment>
<div class="pt-5 comment-wrap">
    <h3 class="mb-5 heading">@Model.Count Yorum</h3>
    <ul class="comment-list">
        @foreach (var item in Model)
        {
            if (item.IsValid)
            {
                <li class="comment">
                    <div class="vcard">
                        <img src="@item.AppUser.ImageUrl" alt="Image placeholder">
                    </div>
                    <div class="comment-body">
                        <h3>@item.AppUser.Name @item.AppUser.Surname</h3>
                        <div class="meta">@item.CommentDate.ToString("dd MMMM yyyy - HH:mm")</div>
                        <p>@item.CommentDetail</p>
                    </div>
                </li>
            }
            else if (!item.IsValid)
            {
                <li class="comment">
                    <div class="vcard">
                        <img src="@item.AppUser.ImageUrl" alt="Image placeholder">
                    </div>
                    <div class="comment-body">
                        <h3>@item.AppUser.Name @item.AppUser.Surname</h3>
                        <div class="meta">@item.CommentDate.ToString("dd MMMM yyyy - HH:mm")</div>
                        <p>Bu Yorum Toksik Bir İfade İçerdiği İçin Yapay Zeka Tarafından Engellendi.</p>
                    </div>
                </li>
            }
        }
    </ul>
    <!-- END comment-list -->
    @await Component.InvokeAsync("_ArticleDetailCreateCommentComponentPartial", new { id = ViewBag.i })
</div>
